<%- include("header") -%>

<h1 style="text-align:center;margin-top:5%"><strong>LOG IN</strong></h1>

<form class="form login-form" action="/logIn" role="form" method="post">

  <div class="row">
    <div class="col-3"></div>
    <div class="form-floating mb-3 col-6">
      <input type="email" class="form-control" name="email" id="email" placeholder="email">
      <label for="email" style="margin-left:5%">email</label>
    </div>
  </div>

  <div class="row">
    <div class="col-3"></div>
    <div class="form-floating mb-3 col-6">
      <input type="password" class="form-control" name="password" id="password" placeholder="password">
      <label for="password" style="margin-left:5%">password</label>
    </div>
  </div>

     <div class="form-group">
       <button class="btn my-btn" type="submit" name="button" style="border:2px solid #343434;background-color:rgb(168,192,199);color:black">Log In</button>
     </div>
 </form>

<%- include("footer") -%>
